	    "illuminate/filesystem": "4.2.*",
	    "mustache/mustache": "v2.7.0"
    },
	"require-dev": {
		"phpspec/phpspec": "~2.0.0",
		"phpunit/phpunit": "4.2.6",
		"mockery/mockery": "~0.9.0",
		"codeception/codeception": "~2.0.0"
	},
    "autoload": {
        "psr-0": {
            "Grandadevans\\GenerateForm": "src/"
        }
    },
    "minimum-stability": "dev"
